[global/wm]
margin-bottom = 0
margin-top = 0
include-file = ~/.config/polybar/colors/nord_v2
;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
include-file = ~/.config/polybar/common/bar.ini
include-file = ~/.config/polybar/modules.ini
include-file = ~/.config/polybar/common/settings.ini

;; Bar Settings
[bar/main]
inherit = base/bar
monitor = ${settings.external-disp}
font-0 = "Noto Sans Mono:size=10;2"
font-1 = "Wuncon Siji:size=10;2"
;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[bar/main-laptop]
inherit = base/bar
monitor = ${settings.laptop-disp}
font-0 = "Noto Sans Mono:size=13;3"
font-1 = "Wuncon Siji:size=10;2"
